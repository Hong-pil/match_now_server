# Dockerfile.oracle
FROM node:18-alpine

# PM2 설치
RUN npm install -g pm2

# 작업 디렉토리
WORKDIR /app

# 패키지 파일 복사 및 설치
COPY package*.json ./
RUN npm ci --only=production

# 소스코드 복사
COPY . .

# 빌드
RUN npm run build

# 포트 노출
EXPOSE 3701

# PM2로 시작
CMD ["pm2-runtime", "start", "dist/main.js", "--name", "match-now-api"]